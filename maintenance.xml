<odoo>
    <data>
        <!-- tree maintenance -->
        <record id="view_management_maintenance_tree" model="ir.ui.view">
            <field name="name">Maintenance.tree</field>
            <field name="model">management.maintenance</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="maintenance">
                    <field name="name"/>
                    <field name="no"/>
                    <field name="tgl_berkunjung"/>
                    <field name="tujuan"/>
                    <field name="keterangan"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- form maintenance -->
        <record id="view_management_maintenance_form" model="ir.ui.view">
            <field name="name">Maintenance.form</field>
            <field name="model">management.maintenance</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="maintenance">
                    <sheet>
                        <div class="oe_title">
							<h1>
								<field name="name"/>
							</h1>
						</div>
                        <group>
                            <field name="name"/>
                            <field name="no"/>
                            <field name="tgl_berkunjung"/>
                            <field name="tujuan"/>
                            <field name="keterangan"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>